{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "default_locale": "en",
    "applications": {
        "gecko": {
            "id": "jid0-z2wAjbeFD5dTCgsj70eQ6UAqQl4@jetpack",
            "strict_min_version": "54.0"
        }
    },
    "homepage_url": "http://streamnotifier.ch",
    "author": "freaktechnik",
    "version": "3.5.0",
    "icons": {
        "48": "assets/images/icon.svg",
        "64": "assets/images/icon.svg"
    },
    "browser_action": {
        "browser_style": false,
        "default_icon": "assets/images/offline.svg",
        "default_popup": "popup/list/index.html",
        "default_title": "__MSG_listTooltipOffline__"
    },
    "background": {
        "scripts": [
            "vendor/underscore-min.js",
            "vendor/event-target-shim.min.js",
            "common/index.js",
            "background/index.js"
        ]
    },
    "permissions": [
        "tabs",
        "notifications",
        "storage",
        "alarms",
        "clipboardWrite",
        "https://www.googleapis.com/youtube/v3/*",
        "https://livestream.com/api/*",
        "https://api.twitch.tv/api/*",
        "https://tmi.twitch.tv/*",
        "https://ptvappapi.picarto.tv/*",
        "http://www.ustream.tv/*",
        "http://www.douyutv.com/api/v1/*",
        "http://*.api.channel.livestream.com/2.0/*",
        "https://www.majorleaguegaming.com/api/*",
        "https://streamapi.majorleaguegaming.com/service/streams/*"
    ],
    "content_security_policy": "script-src 'self'; object-src 'none'; style-src 'self'; font-src 'none'; child-src 'none'; media-src 'none'",
    "options_ui": {
        "page": "options/index.html",
        "browser_style": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            }
        }
    }
}
