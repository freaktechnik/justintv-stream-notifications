{
  "homepage": "http://streamnotifier.ch/",
  "author": "freaktechnik (https://humanoids.be)",
  "name": "justintv-stream-notifications",
  "version": "3.6.1",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/freaktechnik/justintv-stream-notifications.git"
  },
  "bugs": {
    "url": "https://github.com/freaktechnik/justintv-stream-notifications/issues"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "dependencies": {
    "@freaktechnik/eslint-config-base": "^6.3.5",
    "event-target-shim": "^3.0.1",
    "lodash": "^4.17.10",
    "open-iconic": "^1.1.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-key-handler": "^1.0.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@freaktechnik/eslint-config-babel": "^5.1.3",
    "@freaktechnik/eslint-config-extension": "^6.3.2",
    "@freaktechnik/eslint-config-node": "^6.3.1",
    "@freaktechnik/eslint-config-react": "^6.3.4",
    "@freaktechnik/eslint-config-test": "^6.3.2",
    "@freaktechnik/eslint-config-webpack": "^6.3.4",
    "ajv": "^6.4.0",
    "ava": "^0.25.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-es2015-modules-commonjs-simple": "^6.7.4",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "babel-preset-react": "^6.24.1",
    "browser-env": "^3.2.5",
    "codecov": "^3.0.1",
    "css-loader": "^0.28.10",
    "element-dataset": "^2.2.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "fake-indexeddb": "^2.0.4",
    "fetch-headers": "^2.0.0",
    "file-loader": "^1.1.9",
    "html-webpack-plugin": "^2.29.0",
    "mz": "^2.7.0",
    "nyc": "^11.7.1",
    "sinon": "^6.0.0",
    "sinon-chrome": "^2.3.1",
    "style-loader": "^0.20.2",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-no-unsupported-browser-features": "^3.0.0",
    "transifex-loader": "^4.0.2",
    "web-ext": "^2.7.0",
    "webpack": "^3.11.0"
  },
  "scripts": {
    "test:ava": "NODE_ENV=test nyc ava",
    "test": "npm run lint && npm run test:ava",
    "coverage": "nyc report && codecov",
    "lint": "npm run lint:js && npm run lint:json && npm run lint:css && npm run lint:webext",
    "lint:json": "eslint -c src/.eslintrc.json --ext json webextension/manifest.json",
    "lint:js": "eslint test/ src/ scripts/ --ext js,jsx,json",
    "lint:webext": "NODE_ENV=test webpack --hide-modules && npm run fix-i18n && web-ext lint",
    "lint:css": "stylelint \"src/**/*.css\"",
    "build": "NODE_ENV=production webpack && npm run fix-i18n && web-ext build",
    "start": "NODE_ENV=development webpack && npm run fix-i18n && web-ext run --no-reload",
    "fix-i18n": "node ./scripts/fix-i18n-placeholders.js",
    "ci-init": "node ./scripts/setup-travis.js"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-core/register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4",
      "react"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-class-properties",
      [
        "module-resolver",
        {
          "alias": {
            "open-iconic/sprite/open-iconic.min.svg": "./test/helpers/assets/open-iconic.js"
          }
        }
      ],
      "istanbul"
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".jsx"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "indentation": 4,
      "color-named": "always-where-possible",
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "severity": "warning",
          "ignore": [
            "css3-cursors"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "last 1 Firefox versions",
    "last 1 FirefoxAndroid versions"
  ],
  "webExt": {
    "sourceDir": "webextension/"
  }
}
