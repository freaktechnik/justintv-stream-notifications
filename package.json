{
  "homepage": "http://streamnotifier.ch/",
  "author": "freaktechnik (https://humanoids.be)",
  "name": "justintv-stream-notifications",
  "version": "3.5.0",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/freaktechnik/justintv-stream-notifications.git"
  },
  "bugs": {
    "url": "https://github.com/freaktechnik/justintv-stream-notifications/issues"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "dependencies": {
    "event-target-shim": "^3.0.0",
    "lodash": "^4.17.4",
    "open-iconic": "^1.1.1",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-key-handler": "^1.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@freaktechnik/eslint-config-babel": "^5.1.3",
    "@freaktechnik/eslint-config-extension": "^5.2.1",
    "@freaktechnik/eslint-config-node": "^5.2.1",
    "@freaktechnik/eslint-config-react": "^6.0.0",
    "@freaktechnik/eslint-config-test": "^5.2.1",
    "@freaktechnik/eslint-config-webpack": "^5.1.3",
    "ajv": "^5.2.2",
    "ava": "^0.23.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-es2015-modules-commonjs-simple": "^6.7.4",
    "babel-preset-react": "^6.24.1",
    "browser-env": "^3.2.0",
    "codecov": "^3.0.0",
    "css-loader": "^0.28.7",
    "element-dataset": "^2.2.6",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^4.7.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "fake-indexeddb": "^2.0.0",
    "fetch-headers": "^2.0.0",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^2.29.0",
    "mz": "^2.7.0",
    "nyc": "^11.2.1",
    "sinon": "^4.0.0",
    "sinon-chrome": "^2.2.0",
    "style-loader": "^0.19.0",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "transifex-loader": "^4.0.2",
    "web-ext": "^2.2.2",
    "webpack": "^3.8.1"
  },
  "scripts": {
    "test:ava": "NODE_ENV=test nyc ava",
    "test": "npm run lint && npm run test:ava",
    "coverage": "nyc report && codecov",
    "lint": "npm run lint:js && npm run lint:json && npm run lint:css && npm run lint:webext",
    "lint:json": "eslint -c src/.eslintrc.json --ext json webextension/manifest.json",
    "lint:js": "eslint test/ src/ scripts/ --ext js,jsx,json",
    "lint:webext": "webpack --hide-modules && web-ext lint -s webextension/",
    "lint:css": "stylelint \"src/**/*.css\"",
    "build": "webpack && npm run fix-i18n && web-ext build -s webextension/",
    "start": "webpack && npm run fix-i18n && web-ext run -s webextension/",
    "fix-i18n": "node ./scripts/fix-i18n-placeholders.js",
    "ci-init": "node ./scripts/setup-travis.js"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-core/register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4",
      "react"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-class-properties",
      [
        "module-resolver",
        {
          "root": [
            "./"
          ],
          "alias": {
            "open-iconic/sprite/open-iconic.min.svg": "test/helpers/assets/open-iconic.js"
          }
        }
      ],
      "istanbul"
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".jsx"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "indentation": 4,
      "color-named": "always-where-possible",
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "severity": "warning",
          "ignore": [
            "css3-cursors"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "last 1 Firefox versions",
    "last 1 FirefoxAndroid versions"
  ]
}
