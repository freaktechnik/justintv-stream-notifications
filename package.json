  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "dependencies": {
    "event-target-shim": "^2.0.0",
    "lodash": "^4.17.4",
    "md5": "^2.2.1",
    "open-iconic": "^1.1.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-key-handler": "^1.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "ajv": "^5.2.2",
    "ava": "^0.22.0",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-es2015-modules-commonjs-simple": "^6.7.4",
    "babel-preset-react": "^6.24.1",
    "browser-env": "^3.2.0",
    "codecov": "^2.0.2",
    "css-loader": "^0.28.7",
    "element-dataset": "^2.2.6",
    "eslint": "^4.6.1",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-freaktechnik": "^2.4.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-xss": "^0.1.8",
    "extract-text-webpack-plugin": "^3.0.0",
    "fake-indexeddb": "^2.0.0",
    "fetch-headers": "^2.0.0",
    "file-loader": "^1.0.0",
    "html-webpack-plugin": "^2.29.0",
    "mz": "^2.6.0",
    "nyc": "^11.2.1",
    "sinon": "^3.2.1",
    "sinon-chrome": "^2.2.0",
    "style-loader": "^0.18.2",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "transifex-loader": "^4.0.1",
    "web-ext": "^2.0.0",
    "webpack": "^3.5.6"
  },
  "scripts": {
    "test": "npm run lint && nyc ava",
    "coverage": "nyc report && codecov",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:webext",
    "lint:js": "eslint test/ src/ --ext js,jsx",
    "lint:webext": "webpack --hide-modules && web-ext lint -s webextension/",
    "lint:css": "stylelint \"src/**/*.css\"",
    "build": "webpack && npm run fix-i18n && web-ext build -s webextension/",
    "start": "webpack && npm run fix-i18n && web-ext run -s webextension/",
    "fix-i18n": "node ./scripts/fix-i18n-placeholders.js"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-core/register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-class-properties"
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 4,
      "color-named": "always-where-possible"
    }
  }
}
